<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff4f4f4"
    android:orientation="vertical"
    tools:context="com.sirseni.justjava.JustJava6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/mobis1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:scaleType="center"
                android:src="@drawable/mobis" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#FFEB3B"
                android:textSize="70sp" />

            <Button
                android:id="@+id/team_a_one_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_a_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="30dp"
                android:background="#4CAF50"
                android:onClick="teamAOneScore"
                android:text="+1 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/team_a_two_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_a_one_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:background="#4CAF50"
                android:onClick="teamATwoScore"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+2 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/team_a_three_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_a_two_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:background="#4CAF50"
                android:onClick="teamAThreeScore"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+3 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/kcc1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/kcc" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#FFEB3B"
                android:textSize="70sp" />

            <Button
                android:id="@+id/team_b_one_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_b_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="30dp"
                android:background="#4CAF50"
                android:onClick="teamBOneScore"
                android:text="+1 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/team_b_two_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_b_one_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:background="#4CAF50"
                android:onClick="teamBTwoScore"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+2 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/team_b_three_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_b_two_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:background="#4CAF50"
                android:onClick="teamBThreeScore"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="+3 Point"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>


    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#4CAF50"
        android:onClick="resetButton"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />


</RelativeLayout>